@model List<dershane.Models.Exams>

@{
    ViewData["Title"] = "My Class Exam Results";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-journal-check"></i> My Class Exam Results</h2>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table">
                            <tr>
                                <th>Student</th>
                                <th>Lesson</th>
                                <th>Points</th>
                                <th>Grade</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var exam in Model)
                        {
                            <tr>
                                <td>@exam.schoolnumber</td>
                                <td>@exam.lesson</td>
                                <td>@exam.points</td>
                                <td>
                                    @{
                                        var grade = exam.points switch
                                        {
                                            >= 90 => "A",
                                            >= 80 => "B",
                                            >= 70 => "C",
                                            >= 60 => "D",
                                            _ => "F"
                                        };
                                        var badgeColor = grade switch
                                        {
                                            "A" => "success",
                                            "B" => "primary",
                                            "C" => "info",
                                            "D" => "warning",
                                            _ => "danger"
                                        };
                                    }
                                    <span class="badge bg-@badgeColor">@grade</span>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle-fill"></i> There are no exam results for your class yet.
                </div>
            }
        </div>
        <div class="card-footer">
            <small class="text-muted">Last updated: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
        </div>
    </div>
</div>