@model dershane.Models.EditClassViewModel
@{
    ViewData["Title"] = "Edit Class - Principal";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Class</h2>
        </div>
        <div class="card-body">
            <form asp-action="EditClass" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="ClassName" />

                <div class="mb-3">
                    <label asp-for="NewClassName" class="form-label">Class Name</label>
                    <input asp-for="NewClassName" class="form-control" required />
                    <span asp-validation-for="NewClassName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TeacherId" class="form-label">Teacher</label>
                    <select asp-for="TeacherId" class="form-select">
                        <option value="">-- Select Teacher --</option>
                        @foreach (var teacher in ViewBag.AllTeachers ?? Enumerable.Empty<User>())
                        {
                            <option value="@teacher.dershaneid" selected="@(Model?.Teacher != null && Model.Teacher.dershaneid == teacher.dershaneid)">
                                @teacher.firstname @teacher.lastname
                            </option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <h4>Students</h4>
                    <ul class="list-group">
                        @foreach (var student in Model?.Students ?? Enumerable.Empty<User>())
                        {
                            <li class="list-group-item">@student.firstname @student.lastname</li>
                        }
                    </ul>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Save Changes
                    </button>
                    <a asp-action="Classes" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Classes
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>