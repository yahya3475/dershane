@model PrincipalDashboardVM
@{
    ViewData["Title"] = "Principal Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-primary">
                    <i class="bi bi-speedometer2"></i> Principal Dashboard
                </h2>
                <div class="text-muted">
                    <i class="bi bi-calendar3"></i> @DateTime.Now.ToString("dd MMMM yyyy")
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill fs-1"></i>
                    <h3 class="mt-2">@Model.TotalStudents</h3>
                    <p class="mb-0">Students</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-workspace fs-1"></i>
                    <h3 class="mt-2">@Model.TotalTeachers</h3>
                    <p class="mb-0">Teachers</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-building fs-1"></i>
                    <h3 class="mt-2">@Model.TotalClasses</h3>
                    <p class="mb-0">Classes</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-file-earmark-text fs-1"></i>
                    <h3 class="mt-2">@Model.TotalExams</h3>
                    <p class="mb-0">Total Exams</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-journal-bookmark fs-1"></i>
                    <h3 class="mt-2">@Model.TotalHomeworks</h3>
                    <p class="mb-0">Homeworks</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Sınıf İstatistikleri -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Class Statistics</h5>
                </div>
                <div class="card-body">
                    @if (Model.ClassStatistics.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Class</th>
                                        <th>Students</th>
                                        <th>Avg Score</th>
                                        <th>Attendance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var classStat in Model.ClassStatistics)
                                    {
                                        <tr>
                                            <td><strong>@classStat.ClassName</strong></td>
                                            <td>
                                                <span class="badge bg-info">@classStat.StudentCount</span>
                                            </td>
                                            <td>
                                                <span class="badge @(classStat.AverageScore >= 70 ? "bg-success" : classStat.AverageScore >= 50 ? "bg-warning" : "bg-danger")">
                                                    @classStat.AverageScore.ToString("F1")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar @(classStat.AttendanceRate >= 80 ? "bg-success" : classStat.AttendanceRate >= 60 ? "bg-warning" : "bg-danger")" 
                                                         style="width: @classStat.AttendanceRate%">
                                                        @classStat.AttendanceRate.ToString("F1")%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-inbox fs-1"></i>
                            <p class="mt-2">No class data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Öğretmen Performansları -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-trophy"></i> Teacher Performance</h5>
                </div>
                <div class="card-body">
                    @if (Model.TeacherPerformances.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Teacher</th>
                                        <th>Exams</th>
                                        <th>Homeworks</th>
                                        <th>Avg Score</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var teacher in Model.TeacherPerformances.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@teacher.TeacherName</strong>
                                                <br><small class="text-muted">@teacher.TeacherId</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@teacher.ExamsCreated</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@teacher.HomeworksCreated</span>
                                            </td>
                                            <td>
                                                <span class="badge @(teacher.AverageStudentScore >= 70 ? "bg-success" : teacher.AverageStudentScore >= 50 ? "bg-warning" : "bg-danger")">
                                                    @teacher.AverageStudentScore.ToString("F1")
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-person-x fs-1"></i>
                            <p class="mt-2">No teacher data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Son Sınavlar -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Exams</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentExams.Any())
                    {
                        <div class="row">
                            @foreach (var exam in Model.RecentExams)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card border-left-primary">
                                        <div class="card-body">
                                            <h6 class="card-title text-primary">@exam.ExamTitle</h6>
                                            <p class="card-text">
                                                <strong>Lesson:</strong> @exam.Lesson<br>
                                                <strong>Date:</strong> @exam.ExamDate.ToString("dd/MM/yyyy HH:mm")<br>
                                                <strong>Participants:</strong> @exam.ParticipantCount<br>
                                                <strong>Average:</strong> 
                                                <span class="badge @(exam.AverageScore >= 70 ? "bg-success" : exam.AverageScore >= 50 ? "bg-warning" : "bg-danger")">
                                                    @exam.AverageScore.ToString("F1")
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-file-earmark-x fs-1"></i>
                            <p class="mt-2">No recent exams</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-2">
                            <a asp-action="AddUser" class="btn btn-primary btn-lg w-100">
                                <i class="bi bi-person-plus"></i><br>Add User
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-action="List" class="btn btn-success btn-lg w-100">
                                <i class="bi bi-people"></i><br>Manage Users
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-action="Classes" class="btn btn-info btn-lg w-100">
                                <i class="bi bi-building"></i><br>Manage Classes
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-action="Reports" class="btn btn-warning btn-lg w-100">
                                <i class="bi bi-graph-up"></i><br>View Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.border-left-primary {
    border-left: 4px solid #007bff !important;
}
</style>