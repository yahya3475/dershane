@{
    ViewData["Title"] = "Principal Dashboard - dershane";
}

<div class="row">
    <div class="col-md-3 bg-dark text-white p-3" style="min-height:100vh;">
        <h4 class="mb-4">üè´ Principal Panel</h4>
        <ul class="nav flex-column">
            <li class="nav-item mb-2"><a class="nav-link text-white" asp-action="Index">Home</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" asp-action="AddUser">Add User</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" asp-controller="Principal" asp-action="Index">Classes</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" asp-controller="Principal" asp-action="List" asp-route-role="student">Students</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" asp-controller="Principal" asp-action="List" asp-route-role="teacher">Teachers</a></li>
        </ul>
    </div>

    <div class="col-md-9 p-4">
        <h2>Welcome, @ViewBag.username</h2>
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Students</h5>
                        <p class="card-text fs-4">@ViewBag.StudentCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Teachers</h5>
                        <p class="card-text fs-4">@ViewBag.TeacherCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Classes</h5>
                        <p class="card-text fs-4">@ViewBag.ClassCount</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
