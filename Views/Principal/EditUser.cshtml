@model dershane.Models.User

@{
    ViewData["Title"] = "Edit User - Principal";
    var classList = ViewBag.Classes as List<string>;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-person-gear"></i> Edit User</h2>
        </div>
        <div class="card-body">
            <form asp-action="EditUser" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="dershaneid" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="firstname" class="form-label">First Name</label>
                        <input asp-for="firstname" class="form-control" required />
                        <span asp-validation-for="firstname" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="lastname" class="form-label">Last Name</label>
                        <input asp-for="lastname" class="form-control" required />
                        <span asp-validation-for="lastname" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="role" class="form-label">Role</label>
                    <select asp-for="role" class="form-select" required>
                        <option value="student">Student</option>
                        <option value="teacher">Teacher</option>
                        <option value="principal">Principal</option>
                    </select>
                    <span asp-validation-for="role" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="uclass" class="form-label">Class</label>
                    <select asp-for="uclass" class="form-select">
                        <option value="">-- Select Class --</option>
                        @if (classList != null && classList.Any())
                        {
                            foreach (var cls in classList)
                            {
                                <option value="@cls">@cls</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="uclass" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i> Save Changes
                    </button>
                    <a asp-action="List" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}