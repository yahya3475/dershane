@model dershane.Models.User

@{
    ViewData["Title"] = "Add User - Principal";
    var classList = ViewBag.Classes as List<string>;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-person-plus-fill"></i> Add New User</h2>
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-controller="Principal" asp-action="AddUser" method="post">
                @Html.AntiForgeryToken()
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="firstname" class="form-label">First Name</label>
                        <input asp-for="firstname" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="lastname" class="form-label">Last Name</label>
                        <input asp-for="lastname" class="form-control" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="password" class="form-label">Password</label>
                    <div class="input-group">
                        <input asp-for="password" type="password" class="form-control" required />
                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="role" class="form-label">Role</label>
                    <select asp-for="role" class="form-select" required>
                        <option value="">-- Select Role --</option>
                        <option value="student">Student</option>
                        <option value="teacher">Teacher</option>
                        <option value="principal">Principal</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="uclass" class="form-label">Class</label>
                    <select asp-for="uclass" class="form-select">
                        <option value="">-- Select Class --</option>
                        @if (classList != null && classList.Any())
                        {
                            foreach (var cls in classList)
                            {
                                <option value="@cls">@cls</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="newClass" class="form-label">Or Add New Class</label>
                    <input type="text" id="newClass" name="newClass" class="form-control" placeholder="Enter new class name" />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            var passwordInput = document.getElementById('password');
            var icon = this.querySelector('i');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        });
    </script>
}