@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Ã–ÄŸrenci arama iÅŸlevi
        document.getElementById('studentSearch').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const studentItems = document.querySelectorAll('.student-item');
            
            studentItems.forEach(item => {
                const studentName = item.getAttribute('data-name').toLowerCase();
                const studentId = item.getAttribute('data-id').toLowerCase();
                
                if (studentName.includes(searchTerm) || studentId.includes(searchTerm)) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });

        // TÃ¼m Ã¶ÄŸrencileri seÃ§
        function selectAllStudents() {
            const checkboxes = document.querySelectorAll('.student-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = true;
            });
            updateSelectionCount();
        }

        // TÃ¼m seÃ§imleri temizle
        function clearAllStudents() {
            const checkboxes = document.querySelectorAll('.student-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = false;
            });
            updateSelectionCount();
        }

        // SeÃ§im sayÄ±sÄ±nÄ± gÃ¼ncelle
        function updateSelectionCount() {
            const selectedCount = document.querySelectorAll('.student-checkbox:checked').length;
            document.getElementById('selectionCount').textContent = `${selectedCount} Ã¶ÄŸrenci seÃ§ildi`;
        }

        // Checkbox deÄŸiÅŸikliklerini dinle
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('student-checkbox')) {
                updateSelectionCount();
            }
        });

        // Form gÃ¶nderim kontrolÃ¼
        document.getElementById('createClassForm').addEventListener('submit', function(e) {
            const selectedStudents = document.querySelectorAll('.student-checkbox:checked');
            const selectedTeacher = document.querySelector('[name="TeacherId"]').value;
            
            if (selectedStudents.length === 0 && !selectedTeacher) {
                e.preventDefault();
                alert('SÄ±nÄ±f oluÅŸturmak iÃ§in en az bir Ã¶ÄŸrenci seÃ§in veya bir Ã¶ÄŸretmen atayÄ±n.');
                return false;
            }
        });

        // Sayfa yÃ¼klendiÄŸinde seÃ§im sayÄ±sÄ±nÄ± gÃ¼ncelle
        document.addEventListener('DOMContentLoaded', function() {
            updateSelectionCount();
        });
    </script>
}

