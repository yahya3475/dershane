@model List<string>
@{
    ViewData["Title"] = "Classes - Principal";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0"><i class="bi bi-diagram-3-fill me-2"></i>Class List</h2>
            <a asp-action="AddUser" class="btn btn-light">
                <i class="bi bi-plus-circle me-2"></i>Add New Class
            </a>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Class Name</th>
                                <th>Student Count</th>
                                <th>Teacher</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var cls in Model)
                        {
                            var n = (ViewBag.ClassStudentCount != null && ViewBag.ClassStudentCount.ContainsKey(cls)) ? ViewBag.ClassStudentCount[cls] : 0;
                            var t = (ViewBag.ClassTeachers != null && ViewBag.ClassTeachers.ContainsKey(cls)) ? ViewBag.ClassTeachers[cls] : "-";
                            <tr>
                                <td>@cls</td>
                                <td>
                                    <span class="badge bg-primary rounded-pill">@n</span>
                                </td>
                                <td>@t</td>
                                <td>
                                    <a asp-action="EditClass" asp-route-className="@cls" class="btn btn-sm btn-outline-primary me-2" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="DeleteClass" asp-route-className="@cls" method="post" style="display:inline;"
                                        onsubmit="return confirm('Are you sure you want to delete this class?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2"></i>No classes found. Add a new class to get started.
                </div>
            }
        </div>
    </div>
</div>