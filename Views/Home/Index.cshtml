    <!-- Feature Cards -->
    <div class="features-section">
        <div class="row g-4 mt-4">
            @switch (role)
            {
                case "STUDENT":
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100 feature-card">
                            <div class="card-body text-center p-4">
                                <div class="feature-icon bg-primary text-white rounded-circle mx-auto mb-3">
                                    <i class="bi bi-graph-up"></i>
                                </div>
                                <h5 class="card-title">Track Progress</h5>
                                <p class="card-text text-muted">Monitor your academic performance and see detailed analytics of
                                    your grades.</p>
                                <a asp-controller="Student" asp-action="ViewExamSystem" class="btn btn-outline-primary">View
                                    Results</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100 feature-card">
