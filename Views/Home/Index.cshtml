                        <span>üè´</span>
                        break;
                    default:

                        <span>üéì</span>
                        break;
                }
            </div>
            <h1 class="hero-title">Welcome back, @username!</h1>
            <span
                class="role-badge @(role switch { "TEACHER" => "bg-primary", "PRƒ∞NCƒ∞PAL" => "bg-warning", _ => "bg-success" })">
                @role
            </span>
            <p class="hero-description">Your personalized education hub</p>

            <!-- Quick Actions -->
            <div class="quick-actions">
                @switch (role)
                {
                    case "STUDENT":
                        <a asp-controller="Student" asp-action="ViewExamSystem"
