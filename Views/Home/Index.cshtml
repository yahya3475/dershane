@{
    ViewData["Title"] = "Home Page";
    ViewBag.SiteSetting = "Version 1.0.0 - All Systems Go";

    var role = ViewBag.role?.ToString().ToUpper();
    var badgeClass = role == "TEACHER" ? "bg-primary" : "bg-success";
    if (role == "PRİNCİPAL")
    {
        badgeClass = "bg-warning";
    }
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <div class="text-center">
            <h1 class="display-4 fw-bold text-primary mb-2">
                👋 Welcome, @ViewBag.username!
            </h1>
            <h5 class="text-secondary mb-3">
                Role: <span class="badge @badgeClass">@role</span>
            </h5>

            <p class="lead text-muted mx-auto" style="max-width: 600px;">
                Welcome to the dashboard! Here you can access your exams, teacher or principal panel depending on your
                role.
            </p>

            <div class="alert alert-info mt-4 shadow-sm rounded-3">
                ⚙️ Current Site Setting: @ViewBag.SiteSetting
            </div>

            <div class="d-flex flex-wrap justify-content-center gap-3 mt-4">
                @if (role == "STUDENT")
                {
                    <a href="@Url.Action("Index", "Exam")" class="btn btn-lg btn-primary rounded-pill px-4 shadow-sm">
                        📚 Exam Results
                    </a>
                }
                @if (role == "TEACHER")
                {
                    <a href="@Url.Action("Index", "Teacher")" class="btn btn-lg btn-warning rounded-pill px-4 shadow-sm">
                        🔨 Teacher Panel
                    </a>
                }
                @if (role == "PRİNCIPAL")
                {
                    <a href="@Url.Action("Index", "Principal")" class="btn btn-lg btn-warning rounded-pill px-4 shadow-sm">
                        🛠️ Principal Panel
                    </a>
                }

                <a href="@Url.Action("Logout", "Auth")"
                    class="btn btn-lg btn-outline-danger rounded-pill px-4 shadow-sm">
                    🚪 Logout
                </a>
            </div>
        </div>
    </div>
</div>
