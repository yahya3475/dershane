                            class="btn btn-outline-light btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-plus-circle me-2"></i>Create Homework
                        </a>
                        <a asp-controller="Teacher" asp-action="ViewHomeworks"
                            class="btn btn-outline-light btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-journal-bookmark me-2"></i>View Homeworks
                        </a>
                        break;
                    case "PRƒ∞NCƒ∞PAL":
                        <a asp-controller="Principal" asp-action="Index"
                            class="btn btn-light btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-building me-2"></i>Admin Center
                        </a>
                        <a asp-controller="Principal" asp-action="List"
                            class="btn btn-outline-light btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-people me-2"></i>Manage Users
                        </a>
                        <a asp-controller="Principal" asp-action="Classes"
                            class="btn btn-outline-light btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-diagram-3 me-2"></i>Manage Classes
                        </a>
                        <a asp-controller="Schedule" asp-action="Index"
                            class="btn btn-outline-light btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-calendar-week me-2"></i>Schedules
                        </a>
                        break;
                }

                <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger btn-lg rounded-pill px-4 shadow-sm">
                    <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                </a>
            </div>
        </div>
    </div>

