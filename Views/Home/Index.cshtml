                                <div class="feature-icon bg-info text-white rounded-circle mx-auto mb-3">
                                    <i class="bi bi-journal-bookmark"></i>
                                </div>
                                <h5 class="card-title">Homework Hub</h5>
                                <p class="card-text text-muted">Access all your assignments and submit homework on time.</p>
                                <a asp-controller="Student" asp-action="ViewHomeworks" class="btn btn-outline-info">View
                                    Homeworks</a>
                            </div>
                        </div>
                    </div>
                    break;
                case "TEACHER":
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100 feature-card">
