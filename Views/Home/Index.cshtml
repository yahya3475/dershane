                            <i class="bi bi-journal-text me-2"></i>My Results
                        </a>
                        <a asp-controller="Student" asp-action="MyAttendance"
                            class="btn btn-outline-light btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-calendar-check me-2"></i>Attendance
                        </a>
                        <a asp-controller="Student" asp-action="ViewHomeworks"
                            class="btn btn-outline-light btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-journal-bookmark me-2"></i>Homeworks
                        </a>
                        <a asp-controller="Schedule" asp-action="ViewSchedule"
                            class="btn btn-outline-light btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-calendar-event me-2"></i>Schedule
                        </a>
                        break;
                    case "TEACHER":
                        <a asp-controller="Teacher" asp-action="Index" class="btn btn-light btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-person-workspace me-2"></i>Teaching Hub
                        </a>
                        <a asp-controller="Teacher" asp-action="ViewExams"
                            class="btn btn-outline-light btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-clipboard-check me-2"></i>Exam Results
                        </a>
