@model dershane.Models.Schedule

@{
    ViewData["Title"] = "Create Schedule";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-calendar-plus me-2"></i>Create New Schedule</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Lesson" class="form-label"></label>
                        <select asp-for="Lesson" class="form-select" asp-items="ViewBag.Lessons">
                            <option value="">Select Lesson</option>
                        </select>
                        <span asp-validation-for="Lesson" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="UClass" class="form-label"></label>
                        <select asp-for="UClass" class="form-select" asp-items="ViewBag.Classes">
                            <option value="">Select Class</option>
                        </select>
                        <span asp-validation-for="UClass" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Day" class="form-label"></label>
                        <select asp-for="Day" class="form-select" asp-items="ViewBag.Days">
                            <option value="">Select Day</option>
                        </select>
                        <span asp-validation-for="Day" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="StartTime" class="form-label"></label>
                        <input asp-for="StartTime" class="form-control" type="time" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="EndTime" class="form-label"></label>
                        <input asp-for="EndTime" class="form-control" type="time" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}