@model dershane.Models.Schedule

@{
    ViewData["Title"] = "Delete Schedule";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title mb-4">
                <i class="bi bi-trash me-2"></i>Delete Schedule
            </h2>
            <h3 class="text-danger">Are you sure you want to delete this schedule?</h3>
            <div class="mt-4">
                <dl class="row">
                    <dt class="col-sm-3">Lesson</dt>
                    <dd class="col-sm-9">@Model.Lesson</dd>

                    <dt class="col-sm-3">Teacher ID</dt>
                    <dd class="col-sm-9">@Model.TeacherId</dd>

                    <dt class="col-sm-3">Class</dt>
                    <dd class="col-sm-9">@Model.UClass</dd>

                    <dt class="col-sm-3">Day</dt>
                    <dd class="col-sm-9">@((DayOfWeek)Model.Day)</dd>

                    <dt class="col-sm-3">Start Time</dt>
                    <dd class="col-sm-9">@Model.StartTime</dd>

                    <dt class="col-sm-3">End Time</dt>
                    <dd class="col-sm-9">@Model.EndTime</dd>
                </dl>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash me-2"></i>Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>