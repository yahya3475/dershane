@model dershane.Models.SubmitHomeworkVM

<!-- DEBUG Bƒ∞LGƒ∞LERƒ∞ -->
<div class="alert alert-warning">
    <h5>DEBUG Bƒ∞LGƒ∞LERƒ∞:</h5>
    <p><strong>Model null mu:</strong> @(Model == null ? "EVET" : "HAYIR")</p>
    @if (Model != null)
    {
        <p><strong>HomeworkId:</strong> @Model.HomeworkId</p>
        <p><strong>Title:</strong> '@Model.Title' (Length: @(Model.Title?.Length ?? 0))</p>
        <p><strong>Description:</strong> '@Model.Description' (Length: @(Model.Description?.Length ?? 0))</p>
        <p><strong>Lesson:</strong> '@Model.Lesson' (Length: @(Model.Lesson?.Length ?? 0))</p>
        <p><strong>DueDate:</strong> @Model.DueDate.ToString("dd.MM.yyyy HH:mm:ss")</p>
        <p><strong>DueDate Ticks:</strong> @Model.DueDate.Ticks</p>
    }
    
    @if (ViewBag.DebugHomework != null)
    {
        var hw = ViewBag.DebugHomework as dershane.Models.Homework;
        <hr>
        <h6>ViewBag Homework:</h6>
        <p><strong>Title:</strong> '@hw.Title'</p>
        <p><strong>Description:</strong> '@hw.Description'</p>
        <p><strong>Lesson:</strong> '@hw.Lesson'</p>
        <p><strong>DueDate:</strong> @hw.DueDate.ToString("dd.MM.yyyy HH:mm:ss")</p>
    }
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">üìù Submit Assignment</h3>
                </div>
                <div class="card-body">
                    
                    @if (Model == null)
                    {
                        <div class="alert alert-danger">
                            <h5><i class="bi bi-exclamation-triangle me-2"></i>Assignment Not Found</h5>
                            <p>The assignment you're looking for could not be loaded. Please try again or contact your instructor.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <h5><i class="bi bi-info-circle me-2"></i>@Model.Title</h5>
                            <p><strong>Subject:</strong> @Model.Lesson</p>
                            <p><strong>Due Date:</strong> @Model.DueDate.ToString("dd.MM.yyyy HH:mm")</p>
                            <hr>
                            <p><strong>Description:</strong></p>
                            <p>@Model.Description</p>
                        </div>

                        @if (Model.DueDate < DateTime.Now)
                        {
                            <div class="alert alert-danger">
                                <h5><i class="bi bi-clock-history me-2"></i>Assignment Deadline Passed</h5>
                                <p>Unfortunately, the deadline for this assignment has passed. You can no longer submit your work.</p>
                            </div>
                        }
                        else
                        {
                            <form asp-action="SubmitHomework" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="HomeworkId" />

                                <div class="mb-4">
                                    <label asp-for="Answer" class="form-label fw-bold">Your Answer</label>
                                    <textarea asp-for="Answer" class="form-control" rows="10" placeholder="Write your detailed answer here..."></textarea>
                                    <span asp-validation-for="Answer" class="text-danger"></span>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="bi bi-check-lg me-2"></i>Submit Assignment
                                    </button>
                                </div>
                            </form>
                        }
                    }

                    <div class="mt-3">
                        <a asp-action="ViewHomeworks" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>