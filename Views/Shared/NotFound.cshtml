@{
    ViewData["Title"] = "404 - Page Not Found";
}

<div class="container mt-5 text-center">
    <h1 class="display-1 text-danger">404</h1>
    <h2 class="mb-4">Oops! Page Not Found</h2>
    <p class="lead mb-4">We couldn't find the page you were looking for. It might have been removed, renamed, or doesn't exist.</p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
        <i class="bi bi-house-door me-2"></i>Go to Homepage
    </a>
</div>