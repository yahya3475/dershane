
@model List<ExamGroupVM>

<div class="container mt-4">
    <h2>Exam Results</h2>

    @foreach (var group in Model)
    {
        <h3>@group.Lesson</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Student Number</th>
                    <th>Student Name</th>
                    <th>Points</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in group.ExamResults)
                {
                    <tr>
                        <td>@result.StudentNumber</td>
                        <td>@result.StudentName</td>
                        <td>@result.Points</td>
                        <td>
                            <a asp-action="EditExam" asp-route-nid="@result.Nid" class="btn btn-primary btn-sm">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>