@model List<dershane.Models.StudentVM>

@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title">üë®‚Äçüè´ Teacher Panel</h4>
                    <p class="card-text">Welcome!</p>
                    <hr>
                    <div class="d-grid gap-2">
                        <a class="btn btn-primary" href="@Url.Action("AddExam", "Teacher")">
                            <i class="bi bi-plus-circle me-2"></i>Add Exam Note
                        </a>
                        <a class="btn btn-info" href="@Url.Action("ViewExams", "Teacher")">
                            <i class="bi bi-table me-2"></i>View Exam Results
                        </a>
                        <a class="btn btn-success" href="@Url.Action("Index", "Schedule")">
                            <i class="bi bi-calendar-week me-2"></i>Class Schedule
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">üìö Students in Your Class</h4>
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>School Number</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Class</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model)
                                    {
                                        <tr>
                                            <td>@student.DershaneId</td>
                                            <td>@student.FirstName</td>
                                            <td>@student.LastName</td>
                                            <td><span class="badge bg-primary">@student.UClass</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-2"></i>No students found in your class.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 15px;
            transition: all 0.3s ease-in-out;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
        }
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
}