@model List<dershane.Models.StudentWithClass>
@{
    var classList = ViewBag.Classes as List<string>;
    var selectedClass = ViewBag.SelectedClass as string;
}

<div class="container mt-4">
    <h2 class="mb-4">ðŸŽ“ Students</h2>
    
    <form method="get">
        <label>Select class to view students:</label>
        <select class="form-select mb-3" name="uclass">
            <option value="">-- Select Class --</option>
            @if (classList != null)
            {
                foreach (var cls in classList)
                {
                    var selectedAttr = selectedClass == cls ? "selected" : "";
                    <option value="@cls" selected="@selectedAttr">@cls</option>
                }
            }
        </select>
        <button type="submit" class="btn btn-primary">View</button>
        <a href="@Url.Action("AddUser", "Teacher")" class="btn btn-success">Add New Student</a>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-3">No students found.</div>
    }
    else
    {
        <table class="table table-striped table-hover shadow-sm mt-3">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Class Name</th>
                    <th>School Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.FullName</td>
                        <td>@student.ClassName</td>
                        <td>@student.SchoolNumber</td>

                    </tr>
                }
            </tbody>
        </table>
    }
</div>