@model List<dershane.Models.StudentVM>

@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="container mt-4">
    <h2>Teacher Panel</h2>

    <a class="btn btn-primary" href="@Url.Action("AddExam", "Teacher")">Add Exam Note</a>
    <a class="btn btn-primary" href="@Url.Action("ViewExams", "Teacher")">View Exam Results</a>
    <h3 class="mt-5">ðŸ“š Students</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>School Number</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Class</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.DershaneId</td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.UClass</td>
                </tr>
            }
        </tbody>
    </table>
</div>
