@model AddExamVM
@{
    ViewData["Title"] = "Add Exam";
}

<div class="container mt-4">
    <h2>üìù Add Exam</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

    <form asp-action="AddExam" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Student</label>
            <select asp-for="SchoolNumber" asp-items="Model.Students" class="form-select" required>
                <option value="">-- Select Student --</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Lesson</label>
            <input asp-for="Lesson" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Points</label>
            <input asp-for="Points" type="number" class="form-control" min="0" max="100" required />
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
